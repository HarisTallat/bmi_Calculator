<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic9"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".second_page">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="361dp"
        android:layout_height="177dp"
        android:contentDescription="@string/second"
        android:padding="35sp"
        app:srcCompat="@drawable/picccccccccccccccc_removebg_preview" />

    <TextView
        android:id="@+id/tv_YourResult"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit"
        android:fontFamily="@font/holtwood_one_sc"
        android:gravity="center_horizontal"
        android:padding="7sp"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="346dp"
        android:layout_height="96dp"
        android:background="@drawable/edit"
        android:fontFamily="@font/bowlby_one"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="35sp"
        app:drawableRightCompat="@drawable/ic_bookmark_border_24" />


    <TextView
        android:id="@+id/tv_State"
        android:layout_width="340dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit"
        android:fontFamily="@font/rubik_mono_one"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:scrollbarSize="10dp"
        android:textColor="#b4aee8"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_information"
        android:layout_width="match_parent"

        android:layout_height="93dp"
        android:background="@drawable/edit"
        android:fontFamily="@font/carter_one"
        android:padding="10sp"
        android:textColor="#f7ea00"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="152dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginBottom="20dp"

        android:background="@color/black"
        android:fontFamily="@font/lusitana"
        android:gravity="center"
        android:text="@string/go_back"

        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#1a1c20" />

</LinearLayout>